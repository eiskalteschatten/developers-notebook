<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="robots" content="noindex,nofollow">

        <title>{% block title %}Developer's Notebook{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('resources/css/main.css') }}" type="text/css">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!--[if lte IE 9]>
            <script type="text/javascript" src="{{ asset('resources/js/ie.js') }}"></script>
        <![endif]-->

        <script type="text/javascript" src="{{ asset('resources/js/jquery-2.1.4.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('resources/js/jquery-ui-1.11.4.min.js') }}"></script>
    </head>
    <body>
        {% block menubar %}
            <div class="menubar">
                <div class="logo"><a href="index.php">Developer's Notebook</a></div>
            </div>
        {% endblock %}
        <div class="popup-close-layer"></div>

        {% block body %}
            <div class="box login-box">
                <div class="title">Login</div>
                {%  if error %}
                    <div class="message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {%  endif %}
                <form action="{{ path('login_check') }}" method="post" id="loginForm">
                    <input type="hidden" name="_target_path" value="/notebook" />
                    <input type="text" name="_username" placeholder="Username" value="{{ last_username }}"><br>
                    <input type="password" name="_password" placeholder="Password"><br>
                    <input type="submit" style="position: absolute; left: -9999px"/>
                </form>
                <a href="../register/" class="white-button" style="margin-right: 15px;">Register</a><a href="#!" onclick="document.forms['loginForm'].submit()" class="blue-button">Login</a><br>
                <a href="forgotpassword.php" class="forgot-password">Forgot your password?</a>
            </div>
        {% endblock %}

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('resources/js/scripts.js') }}"></script>
        {% endblock %}
    </body>
</html>